{
  "name": "kiwistand",
  "version": "0.7.0",
  "description": "kiwistand is the p2p node client for kiwinews.xyz, a web3 writer friendly Hacker News that nobody controls but everybody co-owns",
  "main": "./src/index.mjs",
  "scripts": {
    "clean:assets": "rm src/public/assets/*",
    "build": "npm run clean:assets && cd src/web && NODE_ENV=production npm run build",
    "test": "ava --timeout=30s --serial --verbose",
    "connect": "ssh root@91.107.210.214",
    "deploy": "npm run build && npm run rsync",
    "rsync": "rsync -avz . root@91.107.210.214:./kiwistand --exclude=anonlocal --exclude=cache --exclude=docs --exclude=anon --exclude \"node_modules\" --exclude=\".git\" --exclude=bootstrap --exclude=data",
    "dev": "cross-env DEBUG=\"*@attestate/*,-@attestate/delegator2*\" concurrently \"npm run watch:web\" \"npm run start\"",
    "start": "node -r dotenv/config ./src/launch.mjs",
    "watch": "nodemon --watch src/views --exec 'npm run dev:anon'",
    "watch:web": "cd src/web && npm run dev",
    "dev:bootstrap": "cross-env API_PORT=8443 HTTP_PORT=80 DATA_DIR=bootstrap BIND_ADDRESS_V4=\"127.0.0.1\" IS_BOOTSTRAP_NODE=true USE_EPHEMERAL_ID=false npm run dev",
    "dev:anon:local": "cross-env API_PORT=8443 HTTP_PORT=4001 DATA_DIR=anonlocal BIND_ADDRESS_V4=\"127.0.0.1\" PORT=0 IS_BOOTSTRAP_NODE=false USE_EPHEMERAL_ID=true npm run dev",
    "dev:anon": "cross-env API_PORT=8443 HTTP_PORT=4000 DATA_DIR=anon BIND_ADDRESS_V4=\"0.0.0.0\" PORT=0 IS_BOOTSTRAP_NODE=false USE_EPHEMERAL_ID=true npm run dev",
    "migration:1": "node -r dotenv/config scripts/migration1.mjs",
    "sync": "node -r dotenv/config ./src/gen_db.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/attestate/kiwistand.git"
  },
  "keywords": [
    "peer-to-peer",
    "eip-712",
    "data-storage",
    "ethereum"
  ],
  "engines": {
    "node": ">=19"
  },
  "author": "The Kiwi News Developers",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/attestate/kiwistand/issues"
  },
  "homepage": "https://github.com/attestate/kiwistand#readme",
  "dependencies": {
    "@attestate/crawler": "0.6.1",
    "@attestate/crawler-call-block-logs": "0.4.4",
    "@attestate/delegator2": "0.4.0",
    "@chainsafe/libp2p-gossipsub": "5.2.1",
    "@chainsafe/libp2p-noise": "10.2.0",
    "@ethereumjs/rlp": "4.0.1",
    "@ethereumjs/trie": "5.0.4",
    "@libp2p/bootstrap": "5.0.0",
    "@libp2p/mplex": "7.1.0",
    "@libp2p/peer-id": "1.1.16",
    "@libp2p/pubsub-peer-discovery": "8.0.0",
    "@libp2p/tcp": "6.0.4",
    "ajv": "8.12.0",
    "ajv-formats": "2.1.1",
    "better-sqlite3": "9.4.0",
    "canonicalize": "2.0.0",
    "cbor-x": "1.5.1",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "date-fns": "2.29.3",
    "debug": "4.3.4",
    "dotenv": "16.0.3",
    "emoji-regex": "10.3.0",
    "eth-fun": "0.9.3",
    "ethereum-cryptography": "1.1.2",
    "ethers": "5.7.2",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "htm": "3.1.1",
    "isbot": "3.7.0",
    "it-all": "2.0.0",
    "it-length-prefixed": "8.0.4",
    "it-map": "2.0.0",
    "jsdom": "24.0.0",
    "libp2p": "0.40.0",
    "linkify-string": "4.1.3",
    "lmdb": "2.7.9",
    "morgan": "1.10.0",
    "node-cache": "5.1.2",
    "node-fetch-cache": "3.1.2",
    "nodemon": "2.0.21",
    "normalize-url": "8.0.0",
    "open-graph-scraper": "6.2.2",
    "pm2": "5.3.0",
    "preact": "10.18.1",
    "rss-parser": "3.13.0",
    "satori": "0.10.9",
    "sharp": "0.32.6",
    "svg-line-chart": "0.4.1",
    "vhtml": "2.2.0",
    "web-push": "3.6.7"
  },
  "devDependencies": {
    "ava": "3.15.0",
    "chokidar": "3.5.3",
    "concurrently": "8.0.1",
    "terser": "5.17.1",
    "vite": "4.3.1"
  },
  "ava": {
    "files": [
      "**/*_test.mjs"
    ],
    "environmentArguments": {
      "DEBUG": "attestate*",
      "HTTP_MESSAGES_MAX_PAGE_SIZE": "500"
    },
    "nodeArguments": [
      "--no-warnings"
    ],
    "require": [
      "dotenv/config"
    ]
  }
}
